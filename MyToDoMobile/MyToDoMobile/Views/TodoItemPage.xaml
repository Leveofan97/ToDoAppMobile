<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MyToDoMobile.TodoItemPage" Title="{Binding Name}">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Название" />
        <Entry Text="{Binding Name}" />
        <Label Text="Описание" />
        <Entry Text="{Binding Notes}" />
        <Label Text="Выполнено" />
        <Switch IsToggled="{Binding Done}" />
        <Button Text="Сохранить" Clicked="OnSaveClicked" />
        <Button Text="Удалить" Clicked="OnDeleteClicked" />
        <Button Text="Отмена" Clicked="OnCancelClicked" />
    </StackLayout>
</ContentPage>